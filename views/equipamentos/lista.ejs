<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1><%= titulo %></h1>
    
    <% if (typeof erro !== 'undefined' && erro) { %>
        <div class="alert-error">
            <%= erro %>
        </div>
    <% } %>

    <div style="background: #fff; padding: 15px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #ddd;">
        <form action="/equipamentos" method="GET" style="box-shadow: none; padding: 0; background: none; max-width: 100%;">
            <div style="display: flex; gap: 10px; align-items: flex-end;">
                
                <div style="flex: 2;">
                    <label for="termo">Buscar (Nome ou Patrimônio):</label>
                    <input type="text" name="termo" value="<%= filtros.termo %>" placeholder="Digite para pesquisar...">
                </div>

                <div style="flex: 1;">
                    <label for="estado">Status:</label>
                    <select name="estado">
                        <option value="">Todos</option>
                        <option value="ok" <%= filtros.estado === 'ok' ? 'selected' : '' %>>OK</option>
                        <option value="manutenção" <%= filtros.estado === 'manutenção' ? 'selected' : '' %>>Manutenção</option>
                        <option value="baixado" <%= filtros.estado === 'baixado' ? 'selected' : '' %>>Baixado</option>
                    </select>
                </div>

                <div>
                    <button type="submit" class="btn">Filtrar</button>
                    <a href="/equipamentos" class="btn" style="background: #6c757d;">Limpar</a>
                </div>
            </div>
        </form>
    </div>

    <a href="/equipamentos/novo" class="btn">Cadastrar Novo Equipamento</a>
    <a href="/" style="margin-left: 10px;">Voltar para Home</a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Patrimônio</th>
                <th>Nome</th>
                <th>Estado</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% equipamentos.forEach(eq => { %>
                <tr>
                    <td><%= eq.id %></td>
                    <td><%= eq.patrimonio %></td>
                    <td><%= eq.nome %></td>
                    <td class="status-<%= eq.estado %>"><%= eq.estado.toUpperCase() %></td>
                    <td>
                        <a href="/equipamentos/<%= eq.id %>/editar">Editar</a> | 
                        <form action="/equipamentos/<%= eq.id %>/excluir" method="POST" style="display:inline; box-shadow:none; padding:0; background:none;" onsubmit="return confirm('Tem certeza que deseja excluir?');">
                            <button type="submit" style="background:none; border:none; color:red; cursor:pointer; padding:0; text-decoration:underline; font-size:1rem;">Excluir</button>
                        </form>
                    </td>
                </tr>
            <% }) %>

            <% if (equipamentos.length === 0) { %>
                <tr>
                    <td colspan="5" style="text-align: center;">Nenhum equipamento encontrado.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>